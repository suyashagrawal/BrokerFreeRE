<%= form_for :property_valuation, url: property_valuations_path, method: :post do |f| %>
  <button type="button" class="btn btn-primary modal-button" data-toggle="modal" data-target="#homeWorthModal">Know your Home Worth</button>
  <div class="modal map-modal fade" id="homeWorthModal" tabindex="-1" role="dialog" aria-labelledby="homeWorthModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <h1>Yes, Analyze My Property Value</h1>
          <p class="analyze">Click the button To Enter Address</p>
          <div>
          <button type="button" class="modal-btn" data-toggle="modal" data-target="#addressModal">What Is My Home Worth</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal map-modal fade" id="addressModal" tabindex="-1" role="dialog" aria-labelledby="addressModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <h1> Please Enter the
            <span id="valuation-text">
              Property Address
            </span>
            You Want Analyzed
          </h1>
          <div class="row">
            <div class="form-group col-md-12 col-xs-12 col-sm-4">
              <%= f.text_field :address, placeholder: "Address, City",class: 'form-control' %>
            </div>
          </div>
          <div>
            <button type="button" class="modal-btn" data-toggle="modal" data-target="#sendModal">What Is My Home Worth</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal map-modal fade" id="sendModal" tabindex="-1" role="dialog" aria-labelledby="sendModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <h1> Please Send
            <span id="valuation-text">
              My Property Valuation
            </span>
          </h1>
          <div class="row">
            <div class="form-group col-md-12 col-xs-12 col-sm-4">
              <%= f.text_field :email, class: 'form-control' %>
              <label>
                <%= check_box_tag :check %>
                Email permission(Yes, I want to recieve my Property valuation by email)
              </label>
            </div>
          </div>
          <div>
            <button type="button" class="modal-btn" data-toggle="modal" data-target="#acurateValuationModal">What Is My Home Worth</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal map-modal fade" id="acurateValuationModal" tabindex="-1" role="dialog" aria-labelledby="acurateValuationModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <h1> For a more Accurate
            <span id="valuation-text">
              Property Valuation
            </span>
          </h1>
          <div class="row">
            <div class="form-group col-md-12 col-xs-12 col-sm-4">
              <%= f.label "Property Condition" %>
              <%= f.text_field :condition, class: 'form-control' %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-12 col-xs-12 col-sm-4">
              <%= f.label "What else would you like us to know?" %>
              <%= f.text_field :other_information, placeholder: "Age,update,extra Amenities?perhaps there was a recent reno", class: 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-md-12 col-xs-12 col-sm-4">
              <%= f.label "When do you want to sell?" %>
              <%= f.text_field :date, class: 'form-control' %>
            </div>
          </div>

            <button type="button" class="modal-btn" data-toggle="modal" data-target="#detailModal">Next</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="modal map-modal fade" id="detailModal" tabindex="-1" role="dialog" aria-labelledby="detailModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <h1>Property Found</h1>
          <div class="row">
            <div class="form-group col-md-12 col-xs-12 col-sm-4">
              <%= f.text_field :first_name, placeholder: "First Name", class: 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-md-12 col-xs-12 col-sm-4">
              <%= f.text_field :last_name, placeholder: "Last Name", class: 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-md-12 col-xs-12 col-sm-4">
              <%= f.text_field :contact, placeholder: "Contact", class: 'form-control' %>
            </div>
          </div>

          <%= f.submit "send me my value", class: "modal-btn" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

