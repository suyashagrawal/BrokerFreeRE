<header>
  <div class="container full-width">
    <nav class="navbar navbar-default">
      <div>

        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>        
        </div>
        <div class="row">
          <div class="col-md-2 col-sm-3 col-xs-12">
            <%= link_to image_tag("logo.png", alt: "logo_image"), "#{root_url}", { class: 'navbar-brand logo' } %>
          </div>
          <div class="col-md-10">
            <div class="social-icons">
              <ul>
                <li>
                  <a href="https://www.facebook.com/"><i class="fa fa-facebook"></i></a>
                </li>
                <li>
                  <a href="https://www.twitter.com/"><i class="fa fa-twitter"></i></a>
                </li>
                <li>
                  <a href="https://www.instagram.com/"><i class="fa fa-instagram"></i></a>
                </li>
              </ul>
            </div>
            <!-- User Section -->
            <div class="login">              
              <div class="col-md-6 col-xs-6 col-sm-6">
                <a href="#"><i class="fa fa-sign-in"></i>Login</a>
              </div>
              <div class="col-md-6 col-xs-6 col-sm-6">
                <a href="#"><i class="fa fa-user"></i>Sign Up</a>
              </div>              
            </div>
          </div>
          <!-- Collect the nav links, forms, and other content for toggling -->          
        </div>

        <div class="collapse navbar-collapse navigation" id="bs-example-navbar-collapse-1">
          <!-- social section -->
          <div class="col-md-12 col-sm-12 col-xs-12">           

            <!-- navigation bar -->
            <ul class="nav navbar-nav">
              <li class="active">
                <%= link_to root_url do %>
                  Home
                  <span class="sr-only">(current)</span>
                <% end %>
              </li>
              <li><%= link_to "Buyer" %></li>
              <li><%= link_to "Seller" %></li>
              <li><%= link_to "How It Works" %></li>
              <li><%= link_to "Search" %></li>
              <li><%= link_to "Contact Us" %></li>
              <li><%= link_to "Agents" %></li>
              <li><%= link_to "Blog" %></li>       
            </ul>

          </div>          
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  </div>
</header>  